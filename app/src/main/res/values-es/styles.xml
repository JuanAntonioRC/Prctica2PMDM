<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="layoutPrincipal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="layoutBotones">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:fontFamily">@font/arialrounded</item>
    </style>

    <style name="InputTextALLCHART">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/arialrounded</item>
    </style>

    <style name="RadioGroupStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:layout_marginLeft">55dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/arialrounded</item>
    </style>

    <style name="StyleSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/arialrounded</item>
    </style>

    <style name="StyleTextViewandSwitchContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="StyleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/arialrounded</item>
    </style>

    <style name="StyleSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/arialrounded</item>
    </style>

    <style name="StyleImangeButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="StyleTextView2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">106dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/arialrounded</item>
    </style>

    <style name="StyleResumenButton">
        <item name="android:layout_width">263dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/arialrounded</item>
    </style>

    <style name="Theme.AppTheme.Light.NoActionBar" parent="android:Theme.Material.Light.NoActionBar" />
</resources>
